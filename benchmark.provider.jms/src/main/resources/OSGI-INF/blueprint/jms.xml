<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

    <bean id="cachingConnectionFactory" class="org.springframework.jms.connection.CachingConnectionFactory">
        <property name="targetConnectionFactory">
            <bean class="org.apache.activemq.ActiveMQConnectionFactory">
                <property name="brokerURL"
                          value="tcp://localhost:61616?socketBufferSize=131072"/>
                <property name="userName" value="tadmin"/>
                <property name="password" value="tadmin"/>
                <property name="useAsyncSend" value="true"/>
            </bean>
        </property>
        <property name="cacheConsumers" value="true"/>
        <property name="cacheProducers" value="true"/>
        <property name="sessionCacheSize" value="50"/>
    </bean>

    <bean id="jmsConfig" class="org.apache.cxf.transport.jms.JMSConfiguration">
        <property name="connectionFactory" ref="cachingConnectionFactory"/>
        <property name="targetDestination" value="in.queue"/>
        <property name="cacheLevel" value="3"/>
        <property name="concurrentConsumers" value="50"/>
        <property name="maxConcurrentConsumers" value="50"/>
        <property name="useConduitIdSelector" value="false"/>
        <property name="wrapInSingleConnectionFactory" value="false"/>
    </bean>

</blueprint>
